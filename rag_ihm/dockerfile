# 1. Image de base avec Python
FROM python:3.12-slim

#  Empêche l'erreur des hardlinks
ENV UV_LINK_MODE=copy
#  Force Docker à installer ses libs dans /opt/venv au lieu de ton dossier /app
ENV UV_PROJECT_ENVIRONMENT=/opt/venv

# 2. Dossier de travail dans le conteneur
WORKDIR /app

# 3. Installer uv dans l'image
RUN pip install --no-cache-dir uv

# 4. Copier les fichiers de config du projet (sans le code pour l'instant)
COPY pyproject.toml uv.lock* ./

# 5. Installer les dépendances du projet dans l'image (FastAPI, etc.)
ENV UV_HTTP_TIMEOUT=300
RUN uv sync --no-dev

# 6. Copier le reste du code dans l'image
COPY . .

# 7. Commande exécutée au démarrage du conteneur
CMD ["sh", "-lc", "\
  if [ \"$DEBUG\" = \"1\" ]; then \
    exec uv run python -Xfrozen_modules=off -m debugpy \
      --listen 0.0.0.0:5679 \
      -m streamlit run app/main.py --server.port=8501 --server.address=0.0.0.0 --server.enableCORS=false --server.enableXsrfProtection=false; \
  else \
    exec uv run streamlit run app/main.py --server.port=8501 --server.address=0.0.0.0 --server.enableCORS=false --server.enableXsrfProtection=false; \
  fi \
"]
